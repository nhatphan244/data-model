[out:json];
// Define the province area
area["name"="{province_name}"]->.province;

// Define the district area within the province
area["name"="{district_name}"](area.province)->.district;

// Define the commune area within the district
area["name"="{commune_name}"]["boundary"="administrative"](area.district)->.commune;

// Fetch the relation for the specified commune within the district and province
relation(area.commune)["name"="{commune_name}"]["boundary"="administrative"];
out body;
>;
out skel qt;

