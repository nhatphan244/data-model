for column in 'RepresentativeId':
        if column in df.columns:
            for index, row in df.iterrows():
                RID = str(row[column]) 
                if pd.isna(RID) or RID == '':
                    continue
                if len(RID) == 9:
                    if not RID.isdigit():
                        errors.append(f"Lỗi ở dòng {index + 2}, {column}: Số CCCD/CMND không hợp lệ")
                elif len(RID) == 12:
                    if not RID.startswith('0') or not RID[1:].isdigit():
                        errors.append(f"Lỗi ở dòng {index + 2}, {column}: Số CCCD/CMND không hợp lệ")
                else:
                        errors.append(f"Lỗi ở dòng {index + 2}, {column}: Số CCCD/CMND không hợp lệ")
